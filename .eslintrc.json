{
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "project": "tsconfig.json",
        "tsconfigRootDir": ".",
        "sourceType": "module"
    },
    "plugins": [
        "unused-imports",
        "eslint-plugin-import",
        "@typescript-eslint"
    ],
    "root": true,
    "env": {
        "node": true,
        "jest": true
    },
    "rules": {
        "indent": [
            "warn",
            4
        ],
        "comma-dangle": [
            "warn",
            "only-multiline"
        ],
        "semi": "error",
        "no-unused-vars": "off",
        "unused-imports/no-unused-imports": "warn",
        "unused-imports/no-unused-vars": [
            "warn",
            {
                "vars": "all",
                "varsIgnorePattern": "^_",
                "args": "after-used",
                "argsIgnorePattern": "^_"
            }
        ],
        "array-callback-return": "error",
        "constructor-super": "error",
        "for-direction": "error",
        "getter-return": "error",
        "no-await-in-loop": "error",
        "no-constant-binary-expression": "error",
        "no-debugger": "error",
        "no-obj-calls": "error",
        "no-this-before-super": "error",
        "no-unreachable": "warn",
        "no-unsafe-optional-chaining": "warn",
        "use-isnan": "error",
        "valid-typeof": "error",
        "arrow-body-style": [
            "warn",
            "as-needed"
        ],
        "camelcase": "warn",
        "consistent-return": "error",
        "curly": [
            "error",
            "multi-line",
            "consistent"
        ],
        "default-case": "warn",
        "default-param-last": "error",
        "dot-notation": "warn",
        "eqeqeq": "error",
        "max-depth": [
            "warn",
            4
        ],
        "max-lines-per-function": [
            "warn",
            150
        ], // ??
        "max-params": "warn",
        "no-bitwise": "error",
        "no-delete-var": "error",
        "no-else-return": "error",
        "no-eval": "error",
        "no-extra-boolean-cast": "warn",
        "no-nested-ternary": "error",
        "no-return-await": "warn",
        "no-shadow": "off",
        "@typescript-eslint/no-shadow": "error",
        "no-useless-catch": "error",
        "no-var": "error",
        "no-useless-return": "error",
        "prefer-const": "error",
        "prefer-numeric-literals": "warn",
        "prefer-object-spread": "error",
        "require-await": "warn",
        "import/no-duplicates": [
            "error",
            {
                "considerQueryString": true
            }
        ],
        "import/order": [
            "error",
            {
                "newlines-between": "always-and-inside-groups",
                "alphabetize": {
                    "order": "asc",
                    "caseInsensitive": true
                },
                "pathGroups": [
                    {
                        "pattern": "@nestjs/**",
                        "group": "external",
                        "position": "before"
                    },
                    {
                        "pattern": "@/**",
                        "group": "internal"
                    }
                ],
                "pathGroupsExcludedImportTypes": [],
                "groups": [
                    [
                        "builtin",
                        "external"
                    ],
                    "internal",
                    [
                        "parent",
                        "sibling",
                        "index"
                    ]
                ]
            }
        ],
        "yoda": "warn",
        "arrow-spacing": "warn",
        "block-spacing": "warn",
        "comma-spacing": "warn",
        "dot-location": [
            "warn",
            "property"
        ],
        "eol-last": "error",
        "linebreak-style": "error",
        "quotes": [
            "error",
            "single"
        ]
    }
}